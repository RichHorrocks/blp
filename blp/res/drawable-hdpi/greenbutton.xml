<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#71E579" />
            <stroke
                android:width="1dp"
                android:color="#59BF60" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>    
    <item>
        <shape>
            <gradient
                android:startColor="#71E579"
                android:endColor="#59BF60"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#59BF60" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>