<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DisplayResultsActivity" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/dateHeader"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/dateHeader"
            android:textSize="15sp"
            android:textColor="#21cbbd"
            android:layout_marginLeft="5dp" />
        <TextView
            android:id="@+id/nameHeader"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/nameHeader"
            android:textColor="#21cbbd"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/levelHeader"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/levelHeader"
            android:textColor="#21cbbd"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/timeHeader"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/timeHeader"
            android:textColor="#21cbbd"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/vo2Header"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/vo2Header"
            android:textColor="#21cbbd"
            android:textSize="15sp" />
    </LinearLayout>               
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp" >
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/sortInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sortInstructions"
            android:textSize="12sp"
            android:layout_marginLeft="5dp" />
        <TextView
            android:id="@+id/graphInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/graphInstructions"
            android:textSize="12sp"
            android:layout_marginLeft="5dp" />
        <TextView
            android:id="@+id/deleteInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deleteInstructions"
            android:textSize="12sp"
            android:layout_marginLeft="5dp" />
    </LinearLayout>    
</LinearLayout>
